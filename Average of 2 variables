  * Description: This program finds the average of 2 variables.
  *************************************************/


#include<stdio.h>
int main(void)

{
	int temperature1 = 70;          //temperature1 is an integer
	int temperature2 = 85;          //temperature2 is an integer too

	float avg;                          //avg is initialized as a float because it is not a whole number
	avg = (temperature1 + temperature2) / 2.0;         //define avg; here we must write 2.0 and not 2 to produce the proper output

	printf("The average of %d and %d degrees is %.1f degrees\n", temperature1, temperature2, avg);     //specify the float as %.1f to round it to 1 decimal

	return 0;
}
